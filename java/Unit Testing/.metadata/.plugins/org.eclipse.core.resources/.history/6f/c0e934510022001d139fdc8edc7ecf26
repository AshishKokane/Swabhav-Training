package com.aurionpro.model;

public class Board {

	private Cell[] cells = new Cell[9];

	public Board() throws Exception {

		for (int i = 0; i < 9; i++) {

			cells[i].setMark(MarkType.EMPTY);

		}
	}

	boolean isBoardFull() {

		int count = 0;
		for (Cell c : cells) {
			if (c.getMark() == MarkType.EMPTY) {
				count++;
			}
		}

		if (count == 8) {
			return true;
		}

		return false;

	}

}
