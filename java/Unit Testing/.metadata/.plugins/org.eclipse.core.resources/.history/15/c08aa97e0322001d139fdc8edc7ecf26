package com.aurionpro.model;

public class Board {

	private Cell[] cells = new Cell[9];

	public Board() {
		Cell c = new Cell();

		for (int i = 0; i < 9; i++) {

			cells[i] = new Cell();

		}
	}

	void print() {

		for (int i = 0; i < 9; i++) {

			System.out.println(cells[i].getMark());

		}
	}

	boolean isBoardFull() {

		int count = 0;
		for (int i = 0; i < 9; i++) {
			if (cells[i].getMark() == MarkType.EMPTY) {
				count++;
			}
		}

		if (count == 9) {
			return true;
		}

		return false;

	}

}
